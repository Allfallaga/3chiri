# Configuration de l'application
FLASK_ENV=development
SECRET_KEY=your_secret_key_here

# Configuration de la base de données
DB_HOST=localhost
DB_PORT=3306
DB_NAME=3chiri
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Configuration des API externes
SOCIAL_API_KEY=your_social_api_key
SOCIAL_API_SECRET=your_social_api_secret

# Configuration des emails
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password

# Configuration des salons (rooms)
DEFAULT_ROOM_COST=10
MAX_PARTICIPANTS=100

# Configuration des sessions
SESSION_TYPE=filesystem
SESSION_PERMANENT=False
SESSION_LIFETIME=3600  # En secondes (1 heure)

# Autres configurations importantes
FOLLOWERS_THRESHOLD=50  # Seuil pour déterminer les rôles des utilisateurs
DEFAULT_POINTS=100       # Points attribués à l'inscription
